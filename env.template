# Black-Box Web Intelligence Configuration
# ==============================================================================
# 
# INSTRUCTIONS:
# 1. Copy this file to .env:  cp env.template .env
# 2. Fill in your API keys below
# 3. Restart the server
#
# ==============================================================================

# ==============================================================================
# LLM PROVIDER CONFIGURATION
# ==============================================================================

# Choose your LLM provider: "openai" or "anthropic"
LLM_PROVIDER=openai

# OpenAI Settings
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Anthropic Settings
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# SQLite database path (relative to project root)
DATABASE_PATH=./data/blackbox.db

# ChromaDB persistence directory
CHROMA_PERSIST_DIR=./data/chroma

# ==============================================================================
# SERVER SETTINGS
# ==============================================================================

API_HOST=0.0.0.0
API_PORT=8000

# ==============================================================================
# BROWSER SETTINGS
# ==============================================================================

# Run browser in headless mode (true/false)
HEADLESS=true

# Browser operation timeout in milliseconds
BROWSER_TIMEOUT=30000

# ==============================================================================
# SAFETY & RATE LIMITING
# ==============================================================================

# Maximum API requests per minute to target website
MAX_REQUESTS_PER_MINUTE=60

# Maximum exploration depth
MAX_EXPLORATION_DEPTH=50

# Maximum scientific loop iterations
MAX_LOOP_ITERATIONS=1000

# Minimum confidence threshold for exporting to OpenAPI spec
CONFIDENCE_THRESHOLD=0.7

# ==============================================================================
# GUARDRAILS & ETHICS
# ==============================================================================

# Comma-separated list of authorized domains (leave empty to specify per-session)
# Example: AUTHORIZED_DOMAINS=example.com,api.example.com
AUTHORIZED_DOMAINS=

# Enable hypothesis probing/verification
ENABLE_PROBING=true

# Enable security fuzzing (DISABLED by default - only enable for authorized testing)
ENABLE_FUZZING=false
